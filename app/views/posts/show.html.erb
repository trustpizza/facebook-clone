<div class="body-container">
  <div class="header">
    <%= render 'shared/navbar' %>
  </div>
  <div class="body">
    <div class="sidebar"> 
      <%= render 'shared/sidebar'%>
    </div>
      <div class="show-post post-card container mt-3 mb-4 p-3 border shadow-sm rounded hover-shadow"> 
      <div class="card-item"><%=@post.title%> by <%=@post.author.first_name%></div>
      <div class="card-item"><%=@post.body%></div>

      <%= turbo_frame_tag "post_1" do %>
        <div class="card-item card-item-bottom">
            <%= @post.likes.count %>
            <%= button_to post_likes_path(@post, like: { user_id: current_user.id, post_id: @post.id }), 
                                                                            class: "btn btn-outline-primary btn-sm d-flex" do %>
                        <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                          <path fill="currentColor" d="M12.1,18.55L12,18.65L11.89,18.55C7.14,14.24 4,11.39 4,8.5C4,6.5 5.5,5 7.5,5C9.04,5 10.54,6 11.07,7.36H12.93C13.46,6 14.96,5 16.5,5C18.5,5 20,6.5 20,8.5C20,11.39 16.86,14.24 12.1,18.55M16.5,3C14.76,3 13.09,3.81 12,5.08C10.91,3.81 9.24,3 7.5,3C4.42,3 2,5.41 2,8.5C2,12.27 5.4,15.36 10.55,20.03L12,21.35L13.45,20.03C18.6,15.36 22,12.27 22,8.5C22,5.41 19.58,3 16.5,3Z" />
                        </svg>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
        
